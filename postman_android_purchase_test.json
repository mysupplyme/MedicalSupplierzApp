{
  "info": {
    "name": "Android Purchase Verification Test",
    "description": "Test collection for /api/verify-android-purchase endpoint"
  },
  "item": [
    {
      "name": "1. Login to get auth token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/login",
          "host": ["{{base_url}}"],
          "path": ["api", "login"]
        }
      }
    },
    {
      "name": "2. Valid Android Purchase",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"subscription_id\": 1,\n    \"purchase_token\": \"test_purchase_token_12345\",\n    \"order_id\": \"GPA.1234-5678-9012-34567\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/verify-android-purchase",
          "host": ["{{base_url}}"],
          "path": ["api", "verify-android-purchase"]
        }
      }
    },
    {
      "name": "3. Invalid Subscription ID",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"subscription_id\": 999,\n    \"purchase_token\": \"test_purchase_token_12345\",\n    \"order_id\": \"GPA.1234-5678-9012-34567\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/verify-android-purchase",
          "host": ["{{base_url}}"],
          "path": ["api", "verify-android-purchase"]
        }
      }
    },
    {
      "name": "4. Missing Required Fields",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"subscription_id\": 1\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/verify-android-purchase",
          "host": ["{{base_url}}"],
          "path": ["api", "verify-android-purchase"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "auth_token",
      "value": ""
    }
  ]
}